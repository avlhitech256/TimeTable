<UserControl x:Class="Specialization.View.SpecializationEditButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Specialization.View"
             xmlns:buttonsControl="clr-namespace:CommonControl.ButtonsControl;assembly=CommonControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="180">
    <buttonsControl:EditButtonControl x:Name="ButtonControl" 
                                       ToolTipAddButton="Создать запись новой специализации"
                                       ToolTipSaveButton="Сохранить изменения в текущей записи специализации"
                                       ToolTipSaveAndNewButton="Сохранить текущую запись специализации и создать новую"
                                       ToolTipDeleteButton="Удалить текущую запись специализации">
    </buttonsControl:EditButtonControl>
</UserControl>
