<Window x:Class="TimeTable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:footerStatusBar="clr-namespace:TimeTable.FooterStatusBar"
        xmlns:leftMenu="clr-namespace:TimeTable.LeftMenu"
        mc:Ignorable="d"
        Title="MainWindow" Height="504" Width="868">
    <DockPanel Name="MainDocPanel" Height="Auto">
        <Menu x:Name="menu" DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Click="MenuItem_Click_Close"/>
            </MenuItem>
            <MenuItem Header="Производство">
                <MenuItem Header="Производственная линия"/>
                <MenuItem Header="Рабочее место"/>
            </MenuItem>
            <MenuItem Header="Настройки"/>
        </Menu>
        <footerStatusBar:FooterStatusBarControl x:Name="FooterBarControl" Height="Auto" DockPanel.Dock="Bottom" HorizontalAlignment="Right"/>
        <leftMenu:LeftMenuControl x:Name="LeftMenuControl" DockPanel.Dock="Left"/>
        <Grid/>
    </DockPanel>
</Window>
