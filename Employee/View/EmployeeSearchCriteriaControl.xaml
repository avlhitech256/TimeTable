<UserControl x:Class="Employee.View.EmployeeSearchCriteriaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Employee.View"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <local:EmployeeSearchFieldsControl Grid.Column="0" Margin="5"/>
        <local:EmployeeSearchButtonControl Grid.Column="1" Width="150"/>
    </Grid>
</UserControl>
