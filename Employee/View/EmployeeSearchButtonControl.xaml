<UserControl x:Class="Employee.View.EmployeeSearchButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Employee.View"
             xmlns:buttonsControl="clr-namespace:CommonControl.ButtonsControl;assembly=CommonControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="180">
    <buttonsControl:SearchButtonControl x:Name="SearchButtonControl"
                                        ToolTipSearchButton="Поиск работника"
                                        ToolTipClearButton="Очистить критерии поиска работника"
                                        ToolTipAddButton="Создать нового работника"
                                        ToolTipViewButton="Просмотр текущей записи работника"
                                        ToolTipDeleteButton="Удалить текущую запись работника">

    </buttonsControl:SearchButtonControl>
</UserControl>
