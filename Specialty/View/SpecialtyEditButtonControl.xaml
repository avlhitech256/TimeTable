<UserControl x:Class="Specialty.View.SpecialtyEditButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Specialty.View"
             xmlns:buttonsControl="clr-namespace:CommonControl.ButtonsControl;assembly=CommonControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="180">
    <buttonsControl:EditButtonControl x:Name="ButtonControl" 
                                       ToolTipAddButton="Создать новую запись специальности"
                                       ToolTipSaveButton="Сохранить изменения внесенные в текущюю запись специальности"
                                       ToolTipSaveAndNewButton="Сохранить изменения внесенные в текущюю запись специальности и создать новую запись"
                                       ToolTipDeleteButton="Удалить текущую запись специальности">
    </buttonsControl:EditButtonControl>
</UserControl>
